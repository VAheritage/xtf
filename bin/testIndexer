#!/usr/bin/env perl

use File::Spec;
my ($vol, $dir, $file) = File::Spec->splitpath(File::Spec->rel2abs($0));
push @INC, File::Spec->catpath($vol, $dir, '');
require "classpath.pl";

print "java -classpath \"$classpath\" -Xms50m -Xmx1000m -Djavax.xml.catalog.files=\"file://$home/WEB-INF/uvateip4-catalog.xml\" -Dxtf.home=\"$home\" -DentityExpansionLimit=128000 -enableassertions org.cdlib.xtf.textIndexer.TextIndexer $args";

exec "java -classpath \"$classpath\" -Xms50m -Xmx1000m -Djavax.xml.catalog.files=\"file://$home/WEB-INF/uvateip4-catalog.xml\" -Dxtf.home=\"$home\" -DentityExpansionLimit=128000 -enableassertions org.cdlib.xtf.textIndexer.TextIndexer $args";
